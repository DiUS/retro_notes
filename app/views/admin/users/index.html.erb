<h1><%= @title = 'Users' %></h1>

<table class="table">
	<thead>
		<tr>
			<th>Email</th>
			<th>Sign in count</th>
			<th>Role</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.email, edit_admin_user_path(user) %></td>
			<td><%= user.sign_in_count %></td>
			<td>
		      <% user.roles.each do |role| %>
		        <%= role %> 
		      <% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @users %>
