<% if flash[:notice] %>
<div class="alert alert-success">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %>
</div>
<% end %>

<% if flash[:alert] %>
<div class="alert alert-info">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:alert] %>
</div>
<% end %>

<% if flash[:error] %>
<div class="alert alert-error">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:error] %>
</div>
<% end %>